extends ./layout/index

block contenido
    main.container.mt-5.mb-5
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center Lo que nuestros clientes dicen ...
        include ./layout/bloque_testimonios
        .row


            .col-md-12
                h2.d-block.w-100.text-center Envia un testimonio

                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col
                    .col-md-8
                        form(action="/testimonios" method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input#nombre(type="text", placeholder="tu Nombre", name="nombre",
                                class="form-control", value= nombre)
                            .form-group
                                label(for="correo") Correo Email
                                input#correo(type="text", placeholder="tu Correo", name="correo",
                                class="form-control", value= correo)
                            .form-group
                                label(for="comentario") Comentario
                                input#comentario(type="text", placeholder="tu comentario", name="comentario",
                                class="form-control", value= comentario)
                            
                            input.btn.btn-success.btn-block(type="submit")

            